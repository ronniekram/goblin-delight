---
import { type HTMLAttributes } from "astro/types";
import { Icon } from "astro-icon/components";

interface Props extends HTMLAttributes<`input`> {
  label: string;
  icon?: (typeof Icon)["name"];
}

const { label, icon, ...rest } = Astro.props;
---

<div class="relative max-w-[25.625rem]">
  <div class="rounded flex items-center justify-between">
    <label class="sr-only">{label}</label>
    <input
      {...rest}
      class="block w-full px-3 py-1.5 rounded bg-green-100 font-sans text-lg text-green-800 placeholder:text-green-700/80 ring-1 ring-inset ring-green-700 hover:ring-[1.5px] hover:ring-inset focus:ring-2 focus:ring-inset focus:ring-green-500"
    />
    {
      icon && (
        <div class="text-green-700/80 pointer-events-none absolute inset-y-0 right-0 pr-3 flex h-full items-center shrink-0">
          <Icon name={icon} size={20} />
        </div>
      )
    }
  </div>
</div>
