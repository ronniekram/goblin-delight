---
import { Icon } from "astro-icon/components";

interface Props {
  label: string;
  href: string;
  icon?: (typeof Icon)["name"];
}

const { label, href, icon } = Astro.props;

const padding = {
  icon: `pl-1 pr-2 py-1.5 md:pl-2 md:pr-3`,
  noIcon: `px-3 py-1.5 xl:px-4`,
};

const text = `font-display text-green-600 hover:text-green-100 text-xl md:text-2xl xl:text-[1.75rem] xl:leading-[1.875rem]`;
const shared = `settings nowrap hover:bg-green-600`;

const style = `${shared} ${text} ${icon ? padding.icon : padding.noIcon}`;
---

<a href={href} class={style}>
  {icon && <Icon name={icon} class="mr-1 md:mr-1.5" />}
  {label}
</a>
