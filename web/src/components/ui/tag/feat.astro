---
export interface Props {
  label: string;
  href: string;
  type: `blog` | `game`;
}

const { label, href, type } = Astro.props;

const padding = `px-6 pt-[7px] pb-1.5 xl:px-7 py-1.5`;
const text = `font-sans font-bold uppercase tracking-[4%] text-[12px] leading-[100%] lg:text-[14px] xl:text-[16px]`;
const base = `settings nowrap rounded-[2.75rem] ${type === `blog` ? `bg-green-600/60 text-green-100 hover:bg-green-600` : `bg-green-200/60 text-green-800 hover:bg-green-200`}`;

const style = `${padding} ${text} ${base}`;
---

<a href={href} class={style}>
  {label}
</a>
