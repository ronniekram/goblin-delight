---
export interface Props {
  title: string;
  slug: string;
  type: `blog` | `game`;
}

const { title, slug, type } = Astro.props;
---

<a
  href={slug}
  class={`settings nowrap feat-tag tag ${type === `blog` ? `bg-green-600/70 text-green-100 hover:bg-green-600` : `bg-green-200/70 text-green-800 hover:bg-green-200`}`}
>
  {title}
</a>
