---
interface Props {
  name: string;
  position: string;
  website?: string;
}

const { name, position, website } = Astro.props;

const nameStyle = `settings text-green-800 text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl`;
---

<div class="flex flex-col xl:space-y-1 font-display">
  <h3 class="font-bold text-green-600 text-xl sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl">
    {position}
  </h3>
  {
    website ? (
      <a href={website} target="_blank" rel="noreferrer">
        {name}
      </a>
    ) : (
      <p>{name}</p>
    )
  }
</div>
