---
interface Props {
  name: string;
  position: string;
  website?: string;
}

const { name, position, website } = Astro.props;

const nameStyle = `settings text-green-800 text-lg sm:text-xl md:text-2xl xl:text-3xl`;
---

<div class="flex flex-col xl:space-y-1 font-display">
  <h3
    class="w-full font-bold text-green-600 text-2xl md:text-3xl lg:text-4xl lg:py-0.5 xl:text-5xl"
  >
    {position}
  </h3>
  {
    website ? (
      <a
        href={website}
        target="_blank"
        rel="noreferrer"
        class={`${nameStyle} hover:text-green-700`}
      >
        {name}
      </a>
    ) : (
      <p class={nameStyle}>{name}</p>
    )
  }
</div>
