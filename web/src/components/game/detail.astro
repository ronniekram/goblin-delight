---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div class="flex flex-col xl:space-y-1 font-display">
  <h3
    class="font-bold text-green-600 text-2xl md:text-3xl lg:text-4xl lg:bg-green-300 lg:py-0.5 xl:text-5xl"
  >
    {title}
  </h3>
  <p class="text-green-800 text-lg sm:text-xl md:text-2xl xl:text-3xl">{content}</p>
</div>
