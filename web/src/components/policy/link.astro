---
import type { Props as $, Mark } from "astro-portabletext/types";

export type Props = $<Mark<{ href: string }>>;

const { node } = Astro.props;
const child: any = node.children.filter((x: any) => x?.marks.contains(node.markKey));
---

<a
  href={node.markDef.href}
  target="_blank"
  rel="noreferrer"
  class="text-green-600 font-bold hover:text-green-700"
>
  {child?.text}
</a>
