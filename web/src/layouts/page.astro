---
import { SEO } from "astro-seo";

import Navigation from "@components/layout/nav.tsx";
import PageHeader from "@components/layout/page-header.astro";
import CTA from "@components/layout/cta.astro";
import Footer from "@components/layout/footer.astro";

export interface Props {
  title: string;
  header?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const ogImgURL = new URL(`/opengraph.png`, Astro.site).toString();

const { title = "Micro studio + yummy designs", header } = Astro.props;

const pageTitle = `${title} | Goblin Delight`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="/style/global.css" />

    <SEO
      title={pageTitle}
      description=""
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: `website`,
          title: `micro studio + yummy designs`,
          image: ogImgURL,
        },
        image: {
          alt: `Goblin Delight`,
        },
      }}
    />
  </head>
  <body>
    <Navigation client:load />
    <PageHeader title={header} />
    <main class="pt-8 pb-16 sm:pt-12 sm:pb-14 md:pt-14 md:pb-20 lg:pt-16 xl:pt-24 xl:pb-32">
      <slot />
    </main>
    <CTA />
    <Footer />
    <style>
      ::selection {
        background-color: #218365;
        color: #fcfcfa;
      }
    </style>
  </body>
</html>
